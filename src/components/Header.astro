---
import { Image } from 'astro:assets';
import logoImg from '../assets/golf-logo.png';

// TODO: Update navigation items and links as needed
const navItems = [
  { label: 'Course', href: '#course' },
  { label: 'Practice', href: '#practice' },
  { label: 'Prices', href: '#prices' },
  { label: 'Hours', href: '#hours' }
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image 
        src={logoImg} 
        alt="Company Logo Image" 
        class="rounded-lg"
        width={48}
        height={48}
      />
      <span class="ml-2">Milt's Golf Center</span>
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-gray-700 hover:text-primary-lightGreen transition duration-150 ease-in-out">
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>
